<?xml version="1.0" encoding="utf-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="lettuceConnectionFactory"
          class="org.springframework.data.redis.connection.lettuce.LettuceConnectionFactory"
          p:hostName="${redis.config.service1.host}" p:port="${redis.config.service1.port}"
          p:validateConnection="true" p:useSsl="false" p:shareNativeConnection="true"
    >
    </bean>

    <bean id="redisTemplate"
          class="org.springframework.data.redis.core.RedisTemplate"
          p:connection-factory-ref="lettuceConnectionFactory"/>

    <bean id="redisUtils" class="com.kyle.framework.utils.RedisUtils">
        <property name="redisTemplate" ref="redisTemplate"></property>
    </bean>

</beans>